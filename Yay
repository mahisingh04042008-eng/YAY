  <script>
    const popupTexts = [
      "Haiiiiii my handsomee üòò",
      "Happy Boyfriend Dayyy!!!! üíï",
      "You‚Äôre the best thing ever happened to me ü•∫",
      "I lobe you endlessly, Sahu meri babygorl‚ù§Ô∏è"
    ];
    const questionsTexts = [
      "Do you know you‚Äôre the most perfect boyfriend ever? ü•∞",
      "Will you let me be your annoying baddie forever? üòèüëë",
      "Do you like being spoiled with my love? üòò",
      "Can I keep you forever and ever? üíñ"
    ];

    let popupIndex = 0;
    let questionIndex = 0;

    const envelope = document.getElementById("envelope");
    const popup = document.getElementById("popup");
    const questions = document.getElementById("questions");
    const letter = document.getElementById("letter");
    const finalStep = document.getElementById("final");
    const end = document.getElementById("end");

    envelope.onclick = () => {
      envelope.style.display = "none";
      showPopups();
    };

    function showPopups() {
      if (popupIndex < popupTexts.length) {
        popup.innerHTML = `<div class="popup-card">${popupTexts[popupIndex]}</div>`;
        popup.style.display = "block";
        popupIndex++;
        setTimeout(showPopups, 2000);
      } else {
        popup.style.display = "none";
        showQuestions();
      }
    }

    function showQuestions() {
      if (questionIndex < questionsTexts.length) {
        questions.innerHTML = `
          <div class="popup-card">${questionsTexts[questionIndex]}</div>
          <br>
          <button class="btn" onclick="nextQuestion()">Yes üíñ</button>
        `;
        questions.style.display = "block";
      } else {
        questions.style.display = "none";
        letter.style.display = "block";
      }
    }

    function nextQuestion() {
      questionIndex++;
      showQuestions();
    }

    function showFinal() {
      letter.style.display = "none";
      finalStep.style.display = "block";
    }

    function showEnd() {
      finalStep.style.display = "none";
      end.style.display = "block";
      createHearts();
      createSparkles();
    }

    function createHearts() {
      const colors = ["üíñ","‚ù§Ô∏è","üíú","üíï"];
      setInterval(() => {
        const heart = document.createElement("div");
        heart.classList.add("heart");
        heart.innerHTML = colors[Math.floor(Math.random() * colors.length)];
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.fontSize = (Math.random() * 2 + 1.5) + "rem";
        heart.style.animationDuration = (Math.random() * 5 + 3) + "s";
        document.body.appendChild(heart);
        setTimeout(() => { heart.remove(); }, 7000);
      }, 150);
    }

    function createSparkles() {
      setInterval(() => {
        const sparkle = document.createElement("div");
        sparkle.classList.add("sparkle");
        sparkle.style.left = Math.random() * 100 + "vw";
        sparkle.style.top = Math.random() * 100 + "vh";
        sparkle.style.animationDuration = (Math.random() * 2 + 1) + "s";
        document.body.appendChild(sparkle);
        setTimeout(() => { sparkle.remove(); }, 4000);
      }, 300);
    }
  </script>
